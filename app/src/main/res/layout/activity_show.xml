<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".view.activity.ShowActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/show_myViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></android.support.v4.view.ViewPager>


    <RadioGroup
        android:id="@+id/show_checkGroup"
        android:background="@color/movie_home_fen"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RadioButton
            android:id="@+id/show_checkBtn_movie"
            android:button="@null"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:drawableTop="@drawable/movie"
            android:textSize="20sp"
            android:paddingHorizontal="20dp"
            android:textColor="@color/check_btn_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:checked="true"
            android:layout_height="38dp" />

        <RadioButton
            android:id="@+id/show_checkBtn_cimene"
            android:button="@null"
            android:layout_gravity="center"
            android:drawableTop="@drawable/cinema"
            android:textSize="20sp"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="20dp"
            android:textColor="@color/check_btn_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="38dp" />

        <RadioButton
            android:id="@+id/show_checkBtn_my"
            android:button="@null"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/my"
            android:textSize="20sp"
            android:paddingHorizontal="20dp"
            android:textColor="@color/check_btn_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="38dp" />

    </RadioGroup>


</LinearLayout>
