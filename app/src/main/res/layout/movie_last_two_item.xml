<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="10dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/movie_release_two_image"
        android:layout_width="120dp"
        app:roundedCornerRadius="5dp"
        android:layout_height="152dp" />

    <TextView
        android:id="@+id/movie_release_two_score"
        android:layout_alignBottom="@id/movie_release_two_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="11sp"
        android:textColor="@color/check_btn_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/movie_release_two_name"
        android:layout_below="@id/movie_release_two_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:lines="1"
        android:textColor="@color/check_btn_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/movie_release_two_btn"
        android:layout_marginTop="10dp"
        android:text="购票"
        android:textSize="12sp"
        android:background="@drawable/my_btn"
        android:textColor="@color/check_btn_bg"
        android:layout_below="@id/movie_release_two_name"
        android:layout_centerHorizontal="true"
        android:layout_width="46dp"
        android:layout_height="20dp" />

</RelativeLayout>
